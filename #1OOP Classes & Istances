class Employee:

    def __init__(self, first, last, pay):
        self.first = first
        self.last = last
        self.pay = pay
        self.email = first + '.' + last + '@company.com'

    def fullname(self):
        return '{} {}'.format(self.first, self.last)

emp1 = Employee('Piotr', 'Badelek', 50000)
emp2 = Employee('Piotr', 'Badelek', 60000)

emp1.fullname()
print(Employee.fullname(emp1))
